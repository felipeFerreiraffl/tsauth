{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // Estrutura
    "rootDir": "./src", // Arquivos fonte
    "outDir": "./dist", // Arquivos compilados (build)

    // Compilação
    "target": "es2022", // Versão do JavaScript de saída (Node.js moderno)
    "module": "commonjs", // ES Modules
    "moduleResolution": "node", // Resolução de módulos
    "esModuleInterop": true, // Compatibilidade com módulos CommonJS/ES
    "allowSyntheticDefaultImports": true,

    // Verificação de tipo
    "strict": true, // Ativa as verificações de TypeScript
    "noUncheckedIndexedAccess": true, // Segurança com acesso a arrays/objetos
    "exactOptionalPropertyTypes": true, // Maior rigor com props opcionais

    // Geração de arquivos
    "sourceMap": true, // Debbuging

    // Otimização e compatibilidade
    "skipLibCheck": true, // Pula a verificação dos tipos node_modules
    "isolatedModules": true, // Compatibilidade com bundles modernos
    "moduleDetection": "force", // Força a detecção de módulos
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*/*.test.ts"],
  "ts-node": {
    "esm": true
  }
}
